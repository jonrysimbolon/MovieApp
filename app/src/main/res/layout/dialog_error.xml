<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageFailed"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".35"
        app:srcCompat="@drawable/ic_list_empty" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/descFailed"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:gravity="center"
        android:text="@string/desc_failed"
        android:textColor="@color/red_500"
        app:layout_constraintEnd_toEndOf="@id/imageFailed"
        app:layout_constraintStart_toStartOf="@id/imageFailed"
        app:layout_constraintTop_toBottomOf="@id/imageFailed" />

    <Button
        android:id="@+id/reloadBtn"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:text="@string/reload"
        app:layout_constraintEnd_toEndOf="@id/imageFailed"
        app:layout_constraintStart_toStartOf="@id/imageFailed"
        app:layout_constraintTop_toBottomOf="@id/descFailed" />

</androidx.constraintlayout.widget.ConstraintLayout>